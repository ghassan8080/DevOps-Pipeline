pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/ghassan8080/DevOps-Pipeline.git', branch: 'main'
      }
    }

    stage('Verify Kubernetes Setup') {
      steps {
        sh '''
          echo "=== Verifying kubectl installation ==="
          kubectl version --client
          echo "=== Verifying Minikube installation ==="
          minikube version
          echo "=== Checking Minikube status ==="
          minikube status || echo "Minikube status check failed, continuing..."
          echo "=== Verifying Kubernetes connection ==="
          kubectl cluster-info
          echo "=== Listing available nodes ==="
          kubectl get nodes || echo "Cannot list nodes, checking if Minikube needs to be started"
          echo "=== Starting Minikube if needed ==="
          minikube status || minikube start --driver=docker
          echo "=== Re-checking Kubernetes connection ==="
          kubectl cluster-info
          echo "=== Re-listing available nodes ==="
          kubectl get nodes
        '''
      }
    }

    stage('Deploy Microservices') {
      steps {
        sh '''
          echo "=== Checking Kubernetes configuration ==="
          kubectl config view
          echo "=== Checking current context ==="
          kubectl config current-context
          echo "=== Listing available contexts ==="
          kubectl config get-contexts
          echo "=== Checking cluster connectivity ==="
          kubectl cluster-info
          echo "=== Listing files in kubernetes directory ==="
          ls -la kubernetes/
          echo "=== Applying Kubernetes manifests ==="
          kubectl apply -f kubernetes/ -v=8
        '''
      }
    }

    stage('Deploy Monitoring') {
      steps {
        sh 'kubectl apply -f kubernetes/prometheus-deployment.yaml'
        sh 'kubectl apply -f kubernetes/grafana-deployment.yaml'
      }
    }
  }
}